version: "2"

services:
  database:
    image: postgres
    environment:
      PGDATA: /var/lib/postgresql/data/pgdata
  osem:
    build:
      context: .
      args:
        CONTAINER_USERID: 1000
    command: /osem/bin/osem-init.sh 
    depends_on:
      - database
    ports:
      - 3000:3000
    volumes:
      - .:/osem
