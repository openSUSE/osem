= semantic_form_for [:admin, @user] do |f|
  = f.inputs "Basic Information" do
    = f.input :name, :as => :string
    = f.input :email
    = f.input :affiliation, :as => :string
    = f.input :biography, :input_html => {:rows => 10}
  = f.actions do
    = f.action :submit, :button_html => {:class => "btn btn-primary"}
